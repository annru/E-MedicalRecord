<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/circle_shape"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        android:text="提示"
        android:textColor="@color/_666666"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@+id/dialog_common_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:minHeight="60dp"
        android:textColor="@color/_999999"
        android:textSize="@dimen/text_size_14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/_d7d7d7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_common_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/_0bacd3"
                android:textSize="@dimen/text_size_12"/>

            <View
                android:id="@+id/dialog_line_view"
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:background="@color/_d7d7d7"/>

            <Button
                android:id="@+id/dialog_common_ok_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/_0bacd3"
                android:textSize="@dimen/text_size_12"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>